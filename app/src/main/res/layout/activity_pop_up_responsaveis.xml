<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.PopUpResponsaveis">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/button_round_border"
        >
        <TextView
            android:id="@+id/tsenha"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            style="@style/label_menor"
            android:text="@string/senhaResponsavel"
            android:textAppearance="@style/label"

            />

        <EditText
            android:id="@+id/senhaResponsavel"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_round"

            android:layout_below="@id/tsenha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btAcessarResponsavel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round_border2"
            android:layout_below="@+id/senhaResponsavel"
            android:text="@string/btResponsavel" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>