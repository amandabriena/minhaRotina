<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.DashboardActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="2"
            android:id="@+id/responsive">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgIcon"
                android:layout_width="@dimen/image_icon_size"
                android:layout_height="@dimen/image_icon_size"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btAjuda"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round_border"
                android:drawableEnd="@android:drawable/ic_menu_help"
                android:text="@string/btAjuda" />

            <Button
                android:id="@+id/btEditar"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/imgIcon"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/button_round_border"
                android:drawableEnd="@drawable/ic_edit"
                android:padding="2dp"
                android:text="@string/btEditar" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_bts_dashboard"
            android:paddingLeft="@dimen/padding_bts_dashboard"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/responsive"
            app:layout_constraintVertical_weight="3"
            >
            <Button
                android:id="@+id/btRotinaDiaria"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:background="@drawable/button_round_border2"
                android:text="@string/btRotinaDiaria"
                android:drawableEnd="@drawable/ic_schedule"
                android:padding="@dimen/padding_icons_button"
                />
            <Button
                android:id="@+id/btGerAtividades"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:layout_marginTop="@dimen/margin_bts_dashboard"
                android:background="@drawable/button_round_border2"
                android:text="@string/btGerAtividades"
                android:drawableEnd="@drawable/ic_build"
                android:padding="@dimen/padding_icons_button"
                />
            <Button
                android:id="@+id/btAddAtividadeFora"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:layout_marginTop="@dimen/margin_bts_dashboard"
                android:background="@drawable/button_round_border2"
                android:drawableEnd="@drawable/ic_create"
                android:padding="@dimen/padding_icons_button"
                android:text="@string/btAddAtividadeFora" />
            <Button
                android:id="@+id/btAtvsAgendadas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:layout_marginTop="@dimen/margin_bts_dashboard"
                android:background="@drawable/button_round_border2"
                android:drawableEnd="@drawable/ic_calendar"
                android:padding="@dimen/padding_icons_button"
                android:text="@string/btAtvsAgendadas" />
            <Button
                android:id="@+id/btEditarPreferencias"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:layout_marginTop="@dimen/margin_bts_dashboard"
                android:background="@drawable/button_round_border2"
                android:drawableEnd="@drawable/ic_activity"
                android:padding="@dimen/padding_icons_button"
                android:text="@string/btEditarPreferencias" />
            <Button
                android:id="@+id/btRelatorioAtividades"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:layout_marginTop="@dimen/margin_bts_dashboard"
                android:background="@drawable/button_round_border2"
                android:drawableEnd="@drawable/ic_time"
                android:padding="@dimen/padding_icons_button"
                android:text="@string/btRelatorioAtividades" />
            <Button
                android:id="@+id/btVolMax"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:layout_marginTop="@dimen/margin_bts_dashboard"
                android:background="@drawable/button_round_border2"
                android:drawableEnd="@drawable/ic_stereo"
                android:padding="@dimen/padding_icons_button"
                android:text="@string/btVolMax" />
            <Button
                android:id="@+id/btVoltarCrianca"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bts_dashboard"
                android:layout_marginTop="@dimen/margin_bts_dashboard"
                android:background="@drawable/button_round_border"
                android:text="@string/btVoltarCrianca"
                android:drawableStart="@drawable/ic_back"
                android:padding="@dimen/padding_icons_button"
                />

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>